<div class="container px-6 mx-auto mt-10 mb-10 grid">
  <div class="mx-auto">
    <%= render 'layouts/flash' %>

    <%= render @assertion %>

    <%= link_to "Back to assertions", assertions_path, class: "ml-2 rounded-lg py-3 px-5 secondary-button inline-block font-medium" %>
