<div class="container mx-auto mt-10 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Models" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Models</h1>
    <%= link_to "New model", new_model_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="models" class="min-w-full">
    <% @models.each do |model| %>
      <%= render model %>
      <p>
        <%= link_to "Show this model", model, class: "ml-2 rounded-lg py-3 px-5 secondary-button inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
