<div class="container mx-auto mt-10 w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @model %>

    <%= link_to "Edit this model", edit_model_path(@model), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Model Versions", model_model_versions_path(@model), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to Dashboard", root_path, class: "ml-2 rounded-lg py-3 px-5 secondary-button inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this model", @model, method: :delete, class: "mt-2 rounded-lg py-3 px-5 delete-button font-medium" %>
    </div>
  </div>
</div>
