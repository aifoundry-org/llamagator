<div class="container px-6 mx-auto mt-10 grid">
  <%= render 'layouts/flash' %>

  <%= render @test_model_version_run %>

  <%= link_to "Back to test run", test_run_path(@test_run), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium w-56" %>

  <div class="w-full w-full mx-auto mt-10 overflow-hidden rounded-lg shadow-xs">
    <h1 class="font-bold text-4xl">Test Results</h1>
    <div class="w-full overflow-x-auto">
      <table class="w-full whitespace-no-wrap">
        <thead>
          <tr
            class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800"
          >
            <th class="px-4 py-3">ID</th>
            <th class="px-4 py-3">Status</th>
            <th class="px-4 py-3">Result</th>
            <th class="px-4 py-3">Assertions</th>
            <th class="px-4 py-3">Created at</th>
            <th class="px-4 py-3">Rating</th>
          </tr>
        </thead>
        <tbody
          class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800"
        >
          <% if @test_results.empty? %>
            <tr>
              <td colspan="7" class="px-4 py-3 text-center">
                <p class="text-gray-500">No test results found.</p>
              </td>
            </tr>
          <% else %>
            <% @test_results.each do |test_result| %>
              <tr class="text-gray-700 dark:text-gray-400">
                <td class="px-4 py-3 text-sm">
                  <p class="font-semibold"><%= link_to test_result.id, test_result, class: "text-blue-500 underline-link" %></p>
                </td>
                <td class="px-4 py-3 text-xs">
                  <span
                    class="px-2 py-1 font-semibold leading-tight rounded-full <%= define_status_class(test_result.status) %>"
                  >
                    <%= test_result.status.capitalize %>
                  </span>
                </td>
                <td class="px-4 py-3 text-sm">
                  <%= test_result.content %>
                </td>
                <td class="px-4 py-3 text-xs">
                  <% state = test_result.assertions_state %>
                  <span
                    class="px-2 py-1 font-semibold leading-tight rounded-full <%= define_assertions_state_class(state) %>"
                  >
                     <%= state.capitalize %>
                  </span>
                </td>
                <td class="px-4 py-3 text-sm">
                  <%= time_ago_in_words(test_result.created_at) %> ago
                </td>
                <td class="px-4 py-3 text-sm">
                  <div class="flex items-center" data-test-result-id="<%= test_result.id %>">
                    <%= rating_tag(test_result) %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
