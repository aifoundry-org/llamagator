<div class="container px-6 mx-auto mt-10 grid">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Test Runs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Test Runs</h1>
     <div class="flex space-x-4">
       <%= link_to "New test run", new_test_run_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
  </div>

  <div class="w-full w-full mx-auto mt-10 overflow-hidden rounded-lg shadow-xs">
    <div class="w-full overflow-x-auto">
      <table class="w-full whitespace-no-wrap">
        <thead>
          <tr
            class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800"
          >
            <th class="px-4 py-3">ID</th>
            <th class="px-4 py-3">Models</th>
            <th class="px-4 py-3">Created at</th>
          </tr>
        </thead>
        <tbody
          class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800"
        >
          <% if @test_runs.empty? %>
            <tr>
              <td colspan="7" class="px-4 py-3 text-center">
                <p class="text-gray-500">No test runs found.</p>
              </td>
            </tr>
          <% else %>
            <% @test_runs.each do |test_run| %>
              <tr class="text-gray-700 dark:text-gray-400">
                <td class="px-4 py-3 text-sm">
                  <p class="font-semibold"><%= link_to test_run.id, test_run, class: "text-blue-500 underline-link" %></p>
                </td>
                <td class="px-4 py-3 text-sm">
                  <p class="font-semibold"><%= test_run.model_versions.map(&:full_name).join(', ') %></p>
                </td>
                <td class="px-4 py-3 text-sm">
                  <%= test_run.created_at.to_date %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
